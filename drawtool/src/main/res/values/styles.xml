<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DrawToolButton">
        <item name="android:textSize">@dimen/mainGraffitiButtonTextSize</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/selector_graffitibutton</item>
        <item name="android:paddingTop">@dimen/mainGraffitiButtonPaddingTop</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#ff181e2a</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:drawablePadding">-5dp</item>
    </style>
    <style name="NormalText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>
    <style name="GraffitiDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="PenButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="GraffitiButton4">
        <item name="android:background">#00ffffff</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_width">70dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:gravity">center</item>
    </style>
</resources>