<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popwin"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_freehand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_freehand_normal2"
                android:onClick="onFreehandBtn"
                android:src="@drawable/bg_highlight_frame"/>

            <ImageView
                android:id="@+id/btn_rect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rect_normal2"
                android:onClick="onRectBtn"/>

            <ImageView
                android:id="@+id/btn_bessel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bessel_normal2"
                android:onClick="onBesselBtn"/>

            <ImageView
                android:id="@+id/btn_oval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_oval_normal2"
                android:onClick="onOvalBtn"/>

            <ImageView
                android:id="@+id/btn_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_line_normal2"
                android:onClick="onLineBtn"/>

            <ImageView
                android:id="@+id/btn_brokenline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_brokenline_normal2"
                android:onClick="onBrokenlineBtn"/>

            <ImageView
                android:id="@+id/btn_polygon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_polygon_normal2"
                android:onClick="onPolygonBtn"/>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>